<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entry.Emp2Team" table="emp2team">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="personid" column="personid"/>
        <property name="teamid" column="teamid"/>
        <property name="positionid" column="positionid"/>
        <property name="occupationid" column="occupationid"/>
        <property name="recordbook" column="recordbook"/>
        <property name="stateid" column="stateid"/>
        <property name="modified" column="modified"/>
        <property name="created" column="created"/>
        <bag name="employees" table="employee" lazy="false" cascade="all">
            <key column="id"/>
            <one-to-many class="entry.Employee"/>
        </bag>
                <bag name="teams" table="team" lazy="false" cascade="all">
            <key column="id"/>
            <one-to-many class="entry.Team"/>
        </bag>
    </class>
</hibernate-mapping>
