<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entry.Employee" table="users">
        <id name="id" column="id">
			<generator class="increment" />
		</id>
        <property name="username" column="username"/>
        <property name="password" column="password"/>
        <property name="enabled" column="enabled"/>
        <property name="modified" column="modified"/>
        <property name="created" column="created"/>
        

        <many-to-one name="person" class="entry.Person" column="personid" not-null="true" cascade="all" fetch="join" />

        <set name="authorities" table="authorities" lazy="false" inverse="true" order-by="authority">
            <key column="username"  property-ref="username" />
            <one-to-many class="entry.Authority"/>
        </set>
        
      
    </class>
</hibernate-mapping>
