<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entry.Employee" table="employee">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="personid" column="personid"/>
        <!--<property name="usrname" column="usrname"/>-->
        <!--<property name="stateid" column="stateid"/>-->
        <!--<property name="recordbook" column="recordbook"/>-->
        <property name="modified" column="modified"/>
        <property name="created" column="created"/>
        <bag name="empTeams" table="emp2team" lazy="false" cascade="all">
            <key column="empid"/>
            <one-to-many class="entry.Emp2Team"/>
        </bag>
    </class>
</hibernate-mapping>
