<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entry.Person" table="person">
        <id name="id" column="id">
			<generator class="increment" />
		</id>
        <property name="firstnameru" column="firstnameru"/>
        <property name="firstnameeng" column="firstnameeng"/>
        <property name="firstnameua" column="firstnameua"/>
        <property name="lastnameru" column="lastnameru"/>
        <property name="lastnameeng" column="lastnameeng"/>
        <property name="lastnameua" column="lastnameua"/>
        <property name="middleName" column="middlename"/>
        <property name="dob" column="dob"/>
        <property name="address" column="address"/>
        <property name="details" column="details"/>
        <property name="sex" column="sex"/>
        <property name="phone" column="phone"/>
        <property name="email" column="email"/>
        <property name="code" column="code"/>
        <property name="modified" column="modified"/>
        <property name="created" column="created"/>
    </class>
</hibernate-mapping>
