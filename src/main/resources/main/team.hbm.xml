<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entry.Team" table="team">
        <id name="id" column="id">
            <generator class="increment" />
        </id>
        <property name="name" column="name"/>
        <property name="teamtypeid" column="teamtypeid"/>
        <property name="rootid" column="rootid"/>
        <property name="details" column="details"/>
        <property name="stateid" column="stateid"/>
        <property name="created" column="created"/>
        <property name="modified" column="modified"/>
        <bag name="empTeams" table="emp2team" lazy="false" cascade="all">
            <key column="teamid"/>
            <one-to-many class="entry.Emp2Team"/>
        </bag>
    </class>
</hibernate-mapping>
