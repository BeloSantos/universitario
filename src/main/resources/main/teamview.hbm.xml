<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entry.TeamView" table="team">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="name" column="name"/>
        <property name="details" column="details"/>
        <property name="created" column="created"/>
        <property name="modified" column="modified"/>
        <bag name="empTeams" table="emp2team" lazy="false" cascade="all">
            <key column="teamid"  not-null="true"/>
            <one-to-many class="entry.EmpTeam"/>
        </bag>
        <many-to-one name="teamtype" class="entry.TeamType" column="teamtypeid"
            not-null="true" cascade="all" fetch="join"/>
    </class>
</hibernate-mapping>
