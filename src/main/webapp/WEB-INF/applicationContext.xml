        <property name="dataSource">
            <ref local="dataSource"/>
        </property>
        <property name="mappingResources">
            <list>
                <value>main/authority.hbm.xml</value>
                <value>main/user.hbm.xml</value>
                <value>main/employee.hbm.xml</value>
                <value>main/person.hbm.xml</value>
                <value>main/team.hbm.xml</value>
                <value>main/emp2team.hbm.xml</value>
                <value>main/teamtype.hbm.xml</value>
                <value>main/state.hbm.xml</value>
                <value>main/occupation.hbm.xml</value>
                <value>main/role.hbm.xml</value>
                <value>main/positions.hbm.xml</value>
                <value>main/lessontype.hbm.xml</value>
                <value>main/marktype.hbm.xml</value>
                <value>main/period.hbm.xml</value>
                <value>main/plan.hbm.xml</value>
                <value>main/plandetails.hbm.xml</value>
                <value>main/discipline.hbm.xml</value>
                <value>main/mark.hbm.xml</value>
                <value>main/reporttype.hbm.xml</value>
                <value>main/time.hbm.xml</value>
                <value>main/week.hbm.xml</value>
                <value>main/lesson.hbm.xml</value>
                <value>main/report.hbm.xml</value>
                <value>main/empteam.hbm.xml</value>
                <value>main/teamemp.hbm.xml</value>
                <value>main/teamview.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
            </props>
        </property>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory">
            <ref local="sessionFactory"/>
        </property>
    </bean>

